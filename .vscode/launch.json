{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "executable": "boards/stm32/NUCLEO_H743ZI2_MICROLITE/build/firmware.elf",
            "name": "Debug STM32H743ZI2",
            "armToolchainPath": "/opt/gcc-arm-none-eabi-10-2020-q4-major/bin",
            "request": "attach",
            "runToMain": true,
            "type": "cortex-debug",
            "servertype": "external",
            "device": "STM32H743ZI2Tx",
            "demangle": true,
            "svdFile": "boards/stm32/NUCLEO_H743ZI2_MICROLITE/STM32H743x.svd",
            "gdbTarget": "172.21.192.1:3333",
            "symbolLoadInfo": {
                "loadAll": true,
                "exceptionList": ""
            }
        },
        {
            "name": "(gdb) Micropython - hello world",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/micropython/ports/unix/micropython",
            "args": ["${workspaceFolder}/examples/hello-world/hello-world.py"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "symbolLoadInfo": {
                "loadAll": true,
                "exceptionList": ""
            },           
            "MIMode": "gdb",            
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Micropython - micro speech",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/micropython/ports/unix/micropython",
            "args": ["${workspaceFolder}/examples/micro-speech/unix/main.py"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/examples/micro-speech/unix",
            "environment": [],
            "externalConsole": false,
            "symbolLoadInfo": {
                "loadAll": true,
                "exceptionList": ""
            },           
            "MIMode": "gdb",            
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}